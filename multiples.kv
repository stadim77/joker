#filename multiples.kv

<Widgets>:
    Button:
        text: "Press me"
        on_release: root.btn()

<P>:
    Label:
        id: 'label'
        text: "You have to enter ONLY 5 numbers !!!"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "    CLOSE POP UP WINDOW \nBY CLICKING OUTSIDE THE BOX "
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}


<ScreenManagement>:
    IntroScreen:
    SelectScreen:
    SelectbScreen:
    InputScreen:
    InputbScreen:
    FinalScreen:


<IntroScreen>:
    name: 'Intro'
    BoxLayout:
        cols: 1
        orientation:'vertical'
        padding: 15
        size: root.width, root.height
        canvas.before:
            Color:
                rgba:(1,0.4,0.45,1)
            Rectangle:
                size: root.width, root.height * 0.8
                pos: self.pos

        Label:
            text:'My Joker App!!!'
            bold: True
            color: (0,0,1,1)
            font_size: 54
            outline_width: 5

        Label:
            text:'by Stavros Dimopoulos'
            font_size: 36
            outline_width: 6
            canvas.before:
                Color:
                    rgba:(1,0.8,0,1)
                Rectangle:
                    size: self.width, self.height * 0.8
                    pos: self.pos

        BoxLayout:
            cols: 2
            orientation:'vertical'
            padding: 15
            size: self.width, self.height

            Button:
                text: 'Enter'
                on_release:
                    app.root.current = 'Select'
                    root.manager.transition.direction = 'left'

            Button:
                text: 'Exit'
                on_press: app.stop()


